<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:controller="application.Controller" prefHeight="400.0" prefWidth="700.0" style="-fx-background-color: #4897ec;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <left>
      <VBox  prefHeight="200.0" prefWidth="100.0" style="-fx-background-color: #f19c41;" BorderPane.alignment="CENTER">
         <children>
            <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true" VBox.vgrow="ALWAYS" onMouseReleased="#mouseReleased1">
               <image>
                  <Image url="@../../Icons/EnterInfo.png" />
               </image>
               <VBox.margin>
                  <Insets bottom="10.0" left="30.0" right="20.0" top="25.0" />
               </VBox.margin>
            </ImageView>
            <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true" onMouseReleased="#mouseReleased2">
               <image>
                  <Image url="@../../Icons/Graph.png" />
               </image>
               <VBox.margin>
                  <Insets bottom="10.0" left="25.0" right="25.0" />
               </VBox.margin>
            </ImageView>
            <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true" onMouseReleased="#mouseReleased3">
               <image>
                  <Image url="@../../Icons/Settings.png" />
               </image>
               <VBox.margin>
                  <Insets bottom="10.0" left="25.0" right="25.0" />
               </VBox.margin>
            </ImageView>
         </children>
      </VBox>
   </left>
   <center>
      <LineChart title="Weight History" BorderPane.alignment="CENTER" id="lineChart">
        <xAxis>
          <CategoryAxis side="BOTTOM" />
        </xAxis>
        <yAxis>
          <NumberAxis side="LEFT" />
        </yAxis>
      </LineChart>
   </center>
</BorderPane>
