<?xml version="1.0" encoding="UTF-8"?>
<?language javascript?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="400.0" prefWidth="700.0" style="-fx-background-color: #4897ec;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.Controller">
   <left>
      <VBox prefHeight="200.0" prefWidth="100.0" style="-fx-background-color: #f19c41;" BorderPane.alignment="CENTER">
         <children>
           <ImageView fx:id="infoView" fitHeight="50.0" fitWidth="50.0" onMouseReleased="#mouseReleased1" pickOnBounds="true" preserveRatio="true" VBox.vgrow="ALWAYS">
               <fx:script>
            		var tooltip = new javafx.scene.control.Tooltip('Information Entry');
            		javafx.scene.control.Tooltip.install(infoView, tooltip);
       		    </fx:script>
               <image>
                  <Image url="@../../Icons/EnterInfo.png">
                  	
                  </Image>
               </image>
               <VBox.margin>
                  <Insets bottom="10.0" left="30.0" right="20.0" top="25.0" />
               </VBox.margin>
            </ImageView>
            <ImageView fx:id="chartView" fitHeight="50.0" fitWidth="50.0" onMouseReleased="#mouseReleased2" pickOnBounds="true" preserveRatio="true">
                <fx:script>
            		var tooltip2 = new javafx.scene.control.Tooltip('Weight History Chart');
            		javafx.scene.control.Tooltip.install(chartView, tooltip2);
       		    </fx:script>
               <image>
                  <Image url="@../../Icons/Graph.png" />
               </image>
               <VBox.margin>
                  <Insets bottom="10.0" left="25.0" right="25.0" />
               </VBox.margin>
            </ImageView>
            <ImageView fx:id="trackerView" fitHeight="50.0" fitWidth="50.0" onMouseReleased="#mouseReleased4" pickOnBounds="true" preserveRatio="true" scaleX="1.1" scaleY="1.1">
               <fx:script>
            		var tooltip3 = new javafx.scene.control.Tooltip('Calorie Tracker');
            		javafx.scene.control.Tooltip.install(trackerView, tooltip3);
       		    </fx:script>
               <image>
                  <Image url="@../../Icons/Clipboard.png" />
               </image>
               <VBox.margin>
                  <Insets bottom="10.0" left="25.0" right="25.0" />
               </VBox.margin>
            </ImageView>
            <ImageView fx:id="helpView" fitHeight="50.0" fitWidth="50.0" onMouseReleased="#mouseReleased5" pickOnBounds="true" preserveRatio="true" scaleX="1.1" scaleY="1.1">
               <fx:script>
            		var tooltip4 = new javafx.scene.control.Tooltip('Help');
            		javafx.scene.control.Tooltip.install(helpView, tooltip4);
       		    </fx:script>
               <image>
                  <Image url="@../../Icons/questionMark.png" />
               </image>
               <VBox.margin>
                  <Insets bottom="10.0" left="25.0" right="25.0" />
               </VBox.margin>
            </ImageView>
            <ImageView fx:id="aboutView" fitHeight="50.0" fitWidth="50.0" onMouseReleased="#mouseReleased3" pickOnBounds="true" preserveRatio="true">
                <fx:script>
            		var tooltip5 = new javafx.scene.control.Tooltip('About');
            		javafx.scene.control.Tooltip.install(aboutView, tooltip5);
       		    </fx:script>
               <image>
                  <Image url="@../../Icons/info.png" />
               </image>
               <VBox.margin>
                  <Insets bottom="10.0" left="25.0" right="25.0" />
               </VBox.margin>
            </ImageView>
         </children>
      </VBox>
   </left>
   <center>
      <Label text="Welcome. Press any Button on the side to continue" textFill="WHITE" BorderPane.alignment="CENTER">
         <font>
            <Font size="19.0" />
         </font>
      </Label>
   </center>
</BorderPane>
